export component AppShell inherits Rectangle {
    in property <string> app_title: "Projection";
    in property <bool> show_back: false;
    in property <length> window_width: 480px;
    in property <length> window_height: 320px;

    callback nav_back();

    background: #1a1a2e;

    VerticalLayout {
        padding: 12px;
        spacing: 8px;

        HorizontalLayout {
            height: 32px;
            spacing: 8px;

            if root.show_back: Rectangle {
                width: 56px;
                height: 28px;
                border-radius: 4px;
                background: #232342;

                Text {
                    text: "Back";
                    font-size: 12px;
                    color: #c0c0d0;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }

                TouchArea {
                    clicked => { root.nav_back(); }
                }
            }

            Text {
                text: root.app_title;
                font-size: 16px;
                color: #e0e0f0;
                vertical-alignment: center;
            }
        }

        Rectangle {
            height: 1px;
            background: #2a2a4a;
        }

        VerticalLayout {
            @children
        }
    }
}
