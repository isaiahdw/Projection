import { ComboBox, LineEdit } from "std-widgets.slint";
import { Screen } from "screen.slint";

export component ClockScreen inherits Screen {
    in property <string> clock_text: "--:--:--";
    in property <bool> clock_running: true;
    in property <string> clock_timezone: "UTC";
    in property <string> clock_label: "Projection Clock";
    in property <string> clock_label_error: "";
    private property <string> label_draft: root.clock_label;
    private property <string> last_submitted_label: "";

    changed clock_label => {
        root.label_draft = root.clock_label;
        root.last_submitted_label = "";
    }

    spacing: 16px;
    alignment: start;

    // Time display
    VerticalLayout {
        spacing: 4px;

        Text {
            text: root.clock_text;
            font-size: 42px;
            font-weight: 300;
            color: #e0e0f0;
            horizontal-alignment: center;
            letter-spacing: 2px;
        }

        // Status pill
        HorizontalLayout {
            alignment: center;

            Rectangle {
                width: status_text.preferred-width + 20px;
                height: 22px;
                border-radius: 11px;
                background: root.clock_running ? #1a3a2a : #3a2a1a;

                status_text := Text {
                    text: root.clock_running ? "Running" : "Paused";
                    font-size: 11px;
                    color: root.clock_running ? #66cc88 : #cc8844;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }
            }
        }
    }

    // Controls
    VerticalLayout {
        spacing: 10px;
        padding-top: 8px;

        // Label commit row (draft stays local until blur/enter/save)
        VerticalLayout {
            spacing: 6px;

            HorizontalLayout {
                spacing: 8px;
                alignment: center;

                Text {
                    text: "Label";
                    font-size: 13px;
                    color: #8888bb;
                    vertical-alignment: center;
                }

                label_input := LineEdit {
                    width: 200px;
                    text: root.label_draft;
                    edited(next_text) => {
                        root.label_draft = next_text;
                    }
                    accepted(next_text) => {
                        root.last_submitted_label = next_text;
                        root.intent("clock.commit_label", next_text);
                    }
                    changed has-focus => {
                        if (!self.has-focus
                                && root.label_draft != root.clock_label
                                && root.label_draft != root.last_submitted_label) {
                            root.last_submitted_label = root.label_draft;
                            root.intent("clock.commit_label", root.label_draft);
                        }
                    }
                }

                Rectangle {
                    width: 70px;
                    height: 30px;
                    border-radius: 6px;
                    background: save_touch.pressed ? #4a4a7a : (save_touch.has-hover ? #3a3a6a : #2a2a4a);

                    Text {
                        text: "Save";
                        font-size: 12px;
                        font-weight: 500;
                        color: #e0e0f0;
                        horizontal-alignment: center;
                        vertical-alignment: center;
                    }

                    save_touch := TouchArea {
                        clicked => {
                            if (root.label_draft != root.clock_label
                                    && root.label_draft != root.last_submitted_label) {
                                root.last_submitted_label = root.label_draft;
                                root.intent("clock.commit_label", root.label_draft);
                            }
                        }
                    }
                }
            }

            if (root.clock_label_error != ""): Text {
                text: root.clock_label_error;
                font-size: 11px;
                color: #cc6666;
                horizontal-alignment: center;
            }
        }

        // Timezone row
        HorizontalLayout {
            spacing: 8px;
            alignment: center;

            Text {
                text: "Timezone";
                font-size: 13px;
                color: #8888bb;
                vertical-alignment: center;
            }

            ComboBox {
                width: 200px;
                model: [
                    "UTC",
                    "America/New_York",
                    "America/Chicago",
                    "America/Denver",
                    "America/Los_Angeles",
                ];
                current-value: root.clock_timezone;
                selected(value) => {
                    root.intent("clock.set_timezone", value);
                }
            }
        }

        // Pause/resume button
        HorizontalLayout {
            alignment: center;

            Rectangle {
                width: 110px;
                height: 34px;
                border-radius: 6px;
                background: toggle_touch.pressed ? #4a4a7a : (toggle_touch.has-hover ? #3a3a6a : #2a2a4a);

                Text {
                    text: root.clock_running ? "Pause" : "Resume";
                    font-size: 13px;
                    font-weight: 500;
                    color: #e0e0f0;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }

                toggle_touch := TouchArea {
                    clicked => {
                        root.intent(root.clock_running ? "clock.pause" : "clock.resume", "");
                    }
                }
            }
        }
    }
}
