export component ErrorScreen inherits VerticalLayout {
    in property <int> vm_rev: 0;
    in property <string> title: "Rendering Error";
    in property <string> message: "";
    in property <string> screen_module: "";
    callback intent(intent_name: string, intent_arg: string);

    spacing: 12px;
    padding: 8px;

    // Error icon + title
    HorizontalLayout {
        spacing: 8px;

        Rectangle {
            width: 28px;
            height: 28px;
            border-radius: 14px;
            background: #3a2020;

            Text {
                text: "!";
                font-size: 16px;
                font-weight: 700;
                color: #cc4444;
                horizontal-alignment: center;
                vertical-alignment: center;
            }
        }

        Text {
            text: root.title;
            font-size: 16px;
            font-weight: 600;
            color: #cc4444;
            vertical-alignment: center;
        }
    }

    // Message
    Rectangle {
        border-radius: 6px;
        background: #232342;

        VerticalLayout {
            padding: 12px;

            Text {
                text: root.message;
                wrap: word-wrap;
                font-size: 13px;
                color: #c0c0d0;
            }
        }
    }

    // Module info
    Text {
        text: "Module: " + root.screen_module;
        font-size: 11px;
        color: #666688;
    }
}
